{
	"name": "api-ts-typeorm",
	"keywords": [
		"javascript",
		"typescript",
		"api",
		"api rest",
		"nodejs",
		"typeorm",
		"docker",
		"postgresql"
	],
	"description": "All code in this project as created following the \"API Restful Javascript com Node.js, Typescript, TypeORM etc \" course in Udemy.",
	"version": "1.0.0",
	"main": "src/shared/http/server.ts",
	"repository": "https://github.com/TutoDS/api-ts-typeorm",
	"author": "Daniel Sousa @TutoDS <jdaniel.asousa@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "tsnd --inspect --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/shared/http/server.ts",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write .",
		"typeorm": "tsnd ./node_modules/typeorm/cli.js",
		"start": "ts-node src/index.ts"
	},
	"dependencies": {
		"celebrate": "^13.0.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.10",
		"typeorm": "0.2.31",
		"mysql": "^2.14.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.10",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.11",
		"@types/joi": "^17.2.3",
		"@types/node": "^8.0.29",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "=4",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.6",
		"tsconfig-paths": "^3.9.0",
		"typescript": "3.3.3333",
		"ts-node": "3.3.0"
	},
	"lint-staged": {
		"*.{js,ts,scss,css,html,tsx,jsx}": [
			"prettier --write .",
			"git add .",
			"eslint . --ext .ts"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
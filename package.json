		"@typescript-eslint/parser": "^4.16.1",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^5.1.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.2"
	},
	"lint-staged": {
		"*.{js,ts,json,scss,css,html,tsx,jsx}": [
